<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.battleship" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/game_logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BattleshipHumanPlayer"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_playing__battleship" >
        </activity>
        <activity
            android:name=".How_to_Play_Screen"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_how_to__play__screen" >
        </activity>
        <activity
            android:name=".SetUpShipsActivity"
            android:label="@string/title_activity_set_up_ship" >
        </activity>
        <activity
            android:name=".SetUpShips"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_set_up_ships" >
        </activity>
        <activity
            android:name=".SetUpShipInstruction"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_set_up_ship_instruction"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity android:name=".GameOverPopup"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.PopupTheme">
        </activity>
    </application>

</manifest>
