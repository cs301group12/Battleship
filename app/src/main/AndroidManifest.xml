<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.battleship" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/game_logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BattleshipHumanPlayer"
            android:label="@string/title_activity_playing__battleship" >
        </activity>
        <activity
            android:name=".How_to_Play_Screen"
            android:label="@string/title_activity_how_to__play__screen" >
        </activity>
        <activity
            android:name=".SetUpShipActivity"
            android:label="@string/title_activity_set_up_ship" >
        </activity>
        <activity
            android:name=".SetUpShips"
            android:label="@string/title_activity_set_up_ships" >
        </activity>
    </application>

</manifest>
