            android:layout_height="75dp"
            android:text="Status"
            android:id="@+id/gameInfo"
            android:background="#aa808080"
            android:textSize="40dp"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#fff0f0f0"
            android:autoText="false" />
    </LinearLayout>

