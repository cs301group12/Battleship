<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.SetUpShipActivity"
    android:background="#ff000000"
    android:id="@+id/topView">

    <com.example.administrator.battleship.SetUpShipsActivity
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/board"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Right"
            android:id="@+id/moveRight"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Left"
            android:id="@+id/moveLeft"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Up"
            android:id="@+id/moveUp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Down"
            android:id="@+id/moveDown"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="200dp" />

        <Button
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Carrier"
            android:id="@+id/carrierButton"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battleship"
            android:id="@+id/battleshipButton"
            android:layout_gravity="left|top"
            android:layout_marginTop="50dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submarine"
            android:id="@+id/submarineButton"
            android:layout_gravity="right|top"
            android:layout_marginTop="50dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Boat"
            android:id="@+id/boatButton"
            android:layout_gravity="right|top"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destroyer"
            android:id="@+id/destroyerButton"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="25dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveButton"
            android:layout_gravity="right|bottom"
            android:textSize="20dp" />
    </FrameLayout>

</LinearLayout>