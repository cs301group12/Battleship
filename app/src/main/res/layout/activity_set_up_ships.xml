<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.SetUpShipActivity"
    android:background="#ff000000"
    android:id="@+id/topView"
    android:weightSum="1"
    android:orientation="horizontal">

    <com.example.administrator.battleship.SetUpShipsActivity
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/board"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginLeft="60dp">

        <Button
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:text="Select Carrier"
            android:id="@+id/selectCarrier"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Battleship"
            android:id="@+id/selectBattleship"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Destroyer"
            android:id="@+id/selectDestroyer"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Submarine"
            android:id="@+id/selectSubmarine"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select PT Boat"
            android:id="@+id/selectPTBoat"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>