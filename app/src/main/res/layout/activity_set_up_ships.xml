<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.SetUpShipActivity"
    android:id="@+id/topView"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@drawable/setting_up_the_game_background">

    <com.example.administrator.battleship.SetUpShipsActivity
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/board"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#292929" >

    </com.example.administrator.battleship.SetUpShipsActivity>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginLeft="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.29" />

    </LinearLayout>

    <Button
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:id="@+id/selectCarrier"
        android:textSize="25dp"
        android:background="@drawable/carrier_ship_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_x="655dp"
        android:layout_y="130dp" />

    <Button
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:id="@+id/selectBattleship"
        android:textSize="25dp"
        android:background="@drawable/battleship_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_x="655dp"
        android:layout_y="216dp" />

    <Button
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:id="@+id/selectDestroyer"
        android:textSize="25dp"
        android:background="@drawable/destroyer_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_x="655dp"
        android:layout_y="304dp" />

    <Button
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:id="@+id/selectSubmarine"
        android:textSize="25dp"
        android:layout_weight="0.02"
        android:background="@drawable/submarine_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_x="655dp"
        android:layout_y="392dp" />

    <Button
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:id="@+id/selectPTBoat"
        android:textSize="25dp"
        android:layout_weight="0.02"
        android:background="@drawable/boat_button"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_x="655dp"
        android:layout_y="480dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveAndPlayButton"
        android:background="@drawable/save_button"
        android:layout_x="348dp"
        android:layout_y="530dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainMenuButton"
        android:background="@drawable/main_menu_return_button"
        android:layout_x="100dp"
        android:layout_y="530dp" />

    <ImageView
        android:layout_width="276dp"
        android:layout_height="142dp"
        android:id="@+id/errorOverlapping"
        android:layout_x="350dp"
        android:layout_y="485dp"
        android:background="@drawable/error_overlapping"
        android:visibility="invisible" />

</AbsoluteLayout>