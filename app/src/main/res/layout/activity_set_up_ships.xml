<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.SetUpShipActivity"
    android:background="#ff000000"
    android:id="@+id/topView"
    android:weightSum="1"
    android:orientation="horizontal">

    <com.example.administrator.battleship.SetUpShipsActivity
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/board"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff000000" >

    </com.example.administrator.battleship.SetUpShipsActivity>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginLeft="60dp">

        <Button
            android:layout_width="227dp"
            android:layout_height="89dp"
            android:id="@+id/selectCarrier"
            android:textSize="25dp"
            android:background="@drawable/select_carrier_button"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="227dp"
            android:layout_height="89dp"
            android:id="@+id/selectBattleship"
            android:textSize="25dp"
            android:background="@drawable/select_battleship_button"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="227dp"
            android:layout_height="89dp"
            android:id="@+id/selectDestroyer"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="@drawable/select_destroyer_button"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="227dp"
            android:layout_height="89dp"
            android:id="@+id/selectSubmarine"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="@drawable/select_submarine_button"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="227dp"
            android:layout_height="89dp"
            android:id="@+id/selectPTBoat"
            android:textSize="25dp"
            android:layout_weight="0.02"
            android:background="@drawable/select_boat_button"
            android:textColor="#ffffffff"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:id="@+id/mainMenuButton"
                android:background="@drawable/main_menu_button" />

            <Button
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:id="@+id/saveAndPlayButton"
                android:background="@drawable/save_and_play_button" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:textColor="#ffffff"
            android:text="Hold down a button to change the orientation of a ship"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>