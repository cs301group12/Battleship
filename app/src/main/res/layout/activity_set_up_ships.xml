<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.SetUpShipActivity"
    android:background="#ff000000"
    android:id="@+id/topView"
    android:weightSum="1"
    android:orientation="horizontal">

    <com.example.administrator.battleship.SetUpShipsActivity
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/board"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carrierHor"
            android:background="@drawable/carrier_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battleshipHor"
            android:background="@drawable/battleship_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destroyerHor"
            android:background="@drawable/destroyer_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submarineHor"
            android:background="@drawable/submarine_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptBoatHor"
            android:background="@drawable/boat_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carrierVer"
            android:layout_gravity="right"
            android:background="@drawable/carrier_vertical"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battleshipVer"
            android:background="@drawable/battleship_vertical"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destroyerVer"
            android:background="@drawable/submarine_vertical"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submarineVer"
            android:background="@drawable/submarine_vertical"
            android:visibility="invisible"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptBoatVer"
            android:background="@drawable/boat_vertical"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.97">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button" />
    </LinearLayout>

</LinearLayout>